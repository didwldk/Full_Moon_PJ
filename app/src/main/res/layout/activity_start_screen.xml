<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000957">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:text=" "
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/activity_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="top"
                        android:text="1. 사진을 넣어주세요"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/photo_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#577BC1"
                    android:text="완료" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/activity_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="top"
                        android:text="2. 제목을 입력해주세요"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/title_edt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="이곳에 작성해주세요" />
                </LinearLayout>

                <Button
                    android:id="@+id/title_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#577BC1"
                    android:text="완료" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/activity_radius"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="top"
                        android:text="3. 목표 금액을 작성해주세요"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/max_edt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="이곳에 작성해주세요"
                        android:inputType="number" />
                </LinearLayout>

                <Button
                    android:id="@+id/start_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFF974"
                    android:text="시작하기"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>